<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/item_relative_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder_detail_view"/>

        <ToggleButton
            android:id="@+id/favorite_button"
            android:background="@drawable/favorite_checkbox"
            android:textOff=""
            android:textOn=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/cover_image"
            android:layout_alignEnd="@+id/cover_image" />

    </RelativeLayout>
